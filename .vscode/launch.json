{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Gall Android Debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "common.app"
            ],
            "env": {
                "OS": "Android"
              },
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
          },
          {
            "name": "Gall IOS Debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "args": [
                "run",
                "common.app"
            ],
            "env": {
                "OS": "IOS"
              },
            "cwd": "${workspaceFolder}",
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal"
          }
    ]
}